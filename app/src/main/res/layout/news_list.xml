<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_12">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_250"
        android:layout_margin="@dimen/dimen_8"
        card_view:cardCornerRadius="@dimen/dimen_7"
        card_view:cardElevation="@dimen/dimen_10">

        <TextView
            android:id="@+id/webTitle_id"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_150"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:textAppearance="?android:textAppearanceLarge"
            tools:text="News Title" />

        <TextView
            android:id="@+id/sectionName_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/webTitle_id"
            android:layout_gravity="start"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="Section" />

        <TextView
            android:id="@+id/authorName_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/webTitle_id"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            tools:text="Author Name" />

        <TextView
            android:id="@+id/pubDate_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/webTitle_id"
            android:layout_gravity="bottom|end"
            android:gravity="center"
            android:padding="@dimen/dimen_8"
            tools:text="2018-08-29 10:50:03" />

    </android.support.v7.widget.CardView>
</RelativeLayout>